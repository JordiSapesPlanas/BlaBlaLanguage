<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:showIn="@layout/activity_createmeeting">

    <TextView
        android:id="@+id/nothing"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="0.11"
        android:gravity="center_horizontal"/>

    <AutoCompleteTextView android:id="@+id/name" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="event name"
        android:inputType="text" android:maxLines="1"
        android:gravity="center_horizontal"
        android:singleLine="true" />

    <TextView
        android:layout_width="223dp"
        android:layout_height="5dp"
        android:text=""
        android:textColorHighlight="@color/drk_button"
        android:id="@+id/name2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.20"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SelectEst"
        android:background="@drawable/roundbutton"
        android:id="@+id/button1" />

    <TextView
        android:layout_width="223dp"
        android:layout_height="5dp"
        android:text=""
        android:textColorHighlight="@color/drk_button"
        android:id="@+id/textViewShowEst"
        android:layout_gravity="center_horizontal"
        android:onClick="showTextEstablishment"
        android:layout_weight="0.20"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="@string/SelectLan"
        android:id="@+id/button2" />

    <TextView
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textViewShowLan"
        android:onClick="showTextLanguage"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.12"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SelectDate"
        android:background="@drawable/roundbutton"
        android:id="@+id/button3" />

    <TextView
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:onClick="showTextDate"
        android:text=""
        android:id="@+id/textViewshowDate"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"

        android:text="@string/SelecCapacity"
        android:id="@+id/button4" />

    <TextView
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textViewShowCapacity"
        android:layout_gravity="center_horizontal"
        android:onClick="showTextCapacity"
        android:layout_weight="0.13"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="@string/CREATE"
        android:id="@+id/button5"
        android:background="@drawable/roundbutcreate"
        android:layout_gravity="center_horizontal" />


</LinearLayout>